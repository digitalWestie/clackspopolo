<%= f.hidden_field :organization_id %>

<div class = "row">
  <%= f.label :post_id, "Post" %>
  <%= f.select(:post_id, @posts, include_blank: true) %>
</div>

<div class = "row">
  <%= f.label :label %>
  <%= f.text_field :label %>
</div>

<div class = "row">
  <%= f.label :role %>
  <%= f.text_field :role %>
</div>

<div class = "row">
  <%= f.label :start_date, "Date of membership started" %>
  <p>The date the membership started, please format as DD/MM/YYYY.</p>
  <%= f.text_field :start_date, class: "form-control" %>
</div>

<div class = "row">
  <%= f.label :end_date, "Date of membership ended" %>
  <p>The date the membership ended. Leave blank if membership continues.</p>
  <p><%= f.text_field :end_date, class: "form-control" %></p>
</div>

<%= render 'admin/shared/sources_links_contacts', f: f %>