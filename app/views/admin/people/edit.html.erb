<h1>Edit Person</h1>
<%= form_for @person, url: admin_person_path(@person), :html => { :class => "form-inline" } do |f| %>
  <%= render 'shared/errors', :object => @person %>
  <%= render 'form', :f => f %>
  <hr/>
  <%= f.submit "Save", :class => "btn" %> |
  <%= link_to 'Back to people', admin_people_path %>
<% end %>

<hr/>

<ul>
<% for membership in @person.memberships %>
  <li><%= link_to membership, person_membership_path(person, membership) %> | <%= link_to "Delete", person_membership_path(person, membership) %></li>
<% end %>
</ul>

<%= link_to 'Add membership', new_person_membership_path(person)  %>