<div class = "row">
<%= f.label :name %>
<%= f.text_field :name %>
</div>

<div class = "row">
<%= f.label :family_name, "Surname" %>
<%= f.text_field :family_name %>
</div>

<div class = "row">
<%= f.label :email %>
<%= f.text_field :email %>
</div>

<div class = "row">
<%= f.label :gender %>
<%= f.text_field :gender %>
</div>

<div class = "row">
<%= f.label :national_identity %>
<%= f.text_field :national_identity %>
</div>

<div class = "row">
<%= f.label :birth_date %>
<p>Please format dates as DD/MM/YYYY</p>
<%= f.text_field :birth_date, class: 'form-control' %>
</div>

<div class = "row">
<%= f.label :death_date %>
<p>Leave blank if not applicable</p>
<%= f.text_field :death_date, class: 'form-control' %>
</div>

<div class = "row">
<%= f.label :summary %>
<%= f.text_area :summary %>
</div>

<div class = "row">
<%= f.label :biography %>
<%= f.text_area :biography %>
</div>

<div class = "row">
<%= f.label :image, 'An image URL' %>
<%= f.text_field :image %>
</div>

<%= render 'admin/shared/sources_links_contacts', f: f %>

<% unless @person.other_names.empty? %>
  <section>
    <header>
      <h2><%= Popolo::OtherName.model_name.human(count: @person.other_names.size) %></h2>
    </header>
  </section>
<% end %>

<% unless @person.identifiers.empty? %>
  <section>
    <header>
      <h2><%= Popolo::Identifier.model_name.human(count: @person.identifiers.size) %></h2>
    </header>
  </section>
<% end %>
