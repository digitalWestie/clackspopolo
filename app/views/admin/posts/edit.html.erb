<h1>Edit Post: <%= @post %></h1>
<%= form_for @post, url: admin_organization_post_path(@organization, @post), :html => { :class => "form-inline" } do |f| %>

  <%= render 'shared/errors', :object => @post %>
  <%= render 'form', :f => f %>

  <hr/>

  <%= f.submit "Save", :class => "btn" %> |
  <%= link_to 'Back', admin_organization_path(@organization) %>
<% end %>
